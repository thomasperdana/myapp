<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- 1. The Label: A unique name for your job -->
    <key>prayerbreakfast</key>
    <string>com.prayerbreakfast.program</string>

    <!-- 2. The Program: The ABSOLUTE path to your executable -->
    <key>ProgramArguments</key>
    <array>
        <string>/Volumes/181TB/repos/prayer.breakfast/dist/main_program</string>
    </array>

    <!-- 3. The Schedule: Run every Monday at 2:00 PM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Weekday</key>
        <integer>1</integer> <!-- 1 = Monday, 2 = Tuesday, etc. 7 = Sunday -->
        <key>Hour</key>
        <integer>14</integer> <!-- 2 PM in 24-hour format -->
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- OPTIONAL: Uncomment this key to also run the job as soon as it's loaded -->
    <key>RunAtLoad</key>
    <true/>

    <!-- 4. ESSENTIAL FOR DEBUGGING: Log files -->
    <!-- Make sure the directory (e.g., ~/logs) exists before you load the job! -->
    <key>StandardOutPath</key>
    <string>/Users/alfaomega/logs/prayerbreakfast.stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/alfaomega/logs/prayerbreakfast.stderr.log</string>
</dict>
</plist>